# Environment Configuration
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000

# Database Configuration (Oracle Cloud Autonomous DB)
DB_USERNAME=your-db-user
DB_PASSWORD=your-db-password
DB_CONNECT_STRING=your-db-connect-string

# Service Ports
AUTH_SERVICE_PORT=3001
PROPERTY_SERVICE_PORT=3002
SEARCH_SERVICE_PORT=3003
USER_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-here
JWT_EXPIRES_IN=1h
JWT_EXPIRES_IN_REMEMBER_ME=7d
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN_REMEMBER_ME=30d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Redis Configuration (for sessions and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@dietiestates25.com

# File Upload Configuration
UPLOAD_DIR=uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_CONTACT_EMAIL=admin@dietiestates25.com

# API Gateway and Service Discovery
SERVICE_SECRET=your-internal-service-secret
SESSION_SECRET=your-session-secret
API_GATEWAY_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_DIR=logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URLs (for OAuth redirects)
FRONTEND_URL=http://localhost:3000
FRONTEND_SUCCESS_URL=http://localhost:3000/auth/success
FRONTEND_ERROR_URL=http://localhost:3000/auth/error

# AWS S3 Configuration
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
# S3 Signed URL expiration in seconds (default: 3600 = 1 hour)
S3_SIGNED_URL_EXPIRATION=3600
