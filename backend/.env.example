# Environment Configuration
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000

# Database Configuration (Oracle Cloud Autonomous DB)
DB_USERNAME=your-db-user
DB_PASSWORD=your-db-password
DB_CONNECT_STRING=your-db-connect-string

# Service Ports
AUTH_SERVICE_PORT=3001
PROPERTY_SERVICE_PORT=3002
SEARCH_SERVICE_PORT=3003
USER_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@dietiestates25.com

# Email Worker Configuration
EMAIL_WORKER_CRON=*/5 * * * *
EMAIL_WORKER_TIMEZONE=Europe/Rome
EMAIL_WORKER_RUN_ON_INIT=true
EMAIL_WORKER_BATCH_SIZE=10

# File Upload Configuration
UPLOAD_DIR=uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_CONTACT_EMAIL=admin@dietiestates25.com

# API Gateway and Service Discovery
SERVICE_SECRET=your-internal-service-secret
SESSION_SECRET=your-session-secret
API_GATEWAY_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_DIR=logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URLs (for OAuth redirects)
FRONTEND_URL=http://localhost:3000
FRONTEND_SUCCESS_URL=http://localhost:3000/auth/success
FRONTEND_ERROR_URL=http://localhost:3000/auth/error

# AWS S3 Configuration
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
# S3 Signed URL expiration in seconds (default: 3600 = 1 hour)
S3_SIGNED_URL_EXPIRATION=3600

# AWS Cognito User Pool
AWS_COGNITO_REGION=eu-central-1
AWS_COGNITO_USER_POOL_ID=eu-central-1_XXXXXXXXX
AWS_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxx

# AWS Credentials (necessarie per AdminCreateUser - agent/admin creation)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...

# Cognito Domain (without https://)
# Example: myapp.auth.eu-south-1.amazoncognito.com
AWS_COGNITO_DOMAIN=your-domain.auth.eu-south-1.amazoncognito.com

# OAuth Callback URL
# This is where Cognito redirects after successful authentication
# MUST match exactly with what's configured in Cognito App Client
# For development:
AWS_COGNITO_CALLBACK_URL=http://localhost:3001/api/oauth/callback
# For production (use HTTPS):
# AWS_COGNITO_CALLBACK_URL=https://your-domain.com/api/oauth/callback

# OAuth Scopes (comma-separated)
# Available scopes: openid, email, profile, phone, aws.cognito.signin.user.admin
AWS_COGNITO_OAUTH_SCOPE=openid,email,profile

# OAuth Response Type
# For Authorization Code Grant (recommended): code
# For Implicit Grant (not recommended): token
AWS_COGNITO_RESPONSE_TYPE=code
