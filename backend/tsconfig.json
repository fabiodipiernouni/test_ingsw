{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"],
      "@services/*": ["src/services/*"],
      "@auth/*": ["src/services/auth-service/*"],
      "@property/*": ["src/services/property-service/*"],
      "@search/*": ["src/services/search-service/*"],
      "@notification/*": ["src/services/notification-service/*"],
      "@generated/*": ["src/services/generated/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/shared/types"],
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}